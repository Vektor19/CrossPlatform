@model IEnumerable<Lab7.Database.Models.Customer>;
@{
    ViewData["Title"] = "Staff Page";
}

<div class="row">
    <div class="col-md-12">
        <h2>Customers Data</h2>

        <div class="form-group">
            <label for="viewType">Виберіть тип виведення: </label>
            <select id="viewType" class="form-control" onchange="changeViewType()">
                <option value="table" selected>Таблично</option>
                <option value="list">По-елементно</option>
            </select>
        </div>

        <div id="tableView" style="display: block;">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>Customer Address Line 1</th>
                        <th>Customer Address Line 2</th>
                        <th>Customer Address Line 3</th>
                        <th>Town City</th>
                        <th>State</th>
                        <th>Email Address</th>
                        <th>Phone Number</th>
                        <th>Customer Other Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.CustomerId</td>
                            <td>@customer.CustomerAddressLine1</td>
                            <td>@customer.CustomerAddressLine2</td>
                            <td>@customer.CustomerAddressLine3</td>
                            <td>@customer.TownCity</td>
                            <td>@customer.State</td>
                            <td>@customer.EmailAddress</td>
                            <td>@customer.PhoneNumber</td>
                            <td>@customer.CustomerOtherDetails</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div id="itemView" style="display: none;">
            <ul class="list-group">
                @foreach (var customer in Model)
                {
                    <li class="list-group-item">
                        <strong>ID:</strong> @customer.CustomerId<br>
                        <strong>Address Line 1:</strong> @customer.CustomerAddressLine1<br>
                        <strong>Address Line 2:</strong> @customer.CustomerAddressLine2<br>
                        <strong>Address Line 3:</strong> @customer.CustomerAddressLine3<br>
                        <strong>Town City:</strong> @customer.TownCity<br>
                        <strong>State:</strong> @customer.State<br>
                        <strong>Email:</strong> @customer.EmailAddress<br>
                        <strong>Phone:</strong> @customer.PhoneNumber<br>
                        <strong>Details:</strong> @customer.CustomerOtherDetails
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<script>
    function changeViewType() {
        const viewType = document.getElementById("viewType").value;
        const tableView = document.getElementById("tableView");
        const listView = document.getElementById("itemView");

        if (viewType === "table") {
            tableView.style.display = "block";
            listView.style.display = "none";
        } else {
            tableView.style.display = "none";
            listView.style.display = "block";
        }
    }
</script>
