@model IEnumerable<Lab7.Database.Models.Staff>;
@{
    ViewData["Title"] = "Staff Page";
}

<div class="row">
    <div class="col-md-12">
        <h2>Staff Data</h2>

        <div class="form-group">
            <label for="viewType">Виберіть тип виведення: </label>
            <select id="viewType" class="form-control" onchange="changeViewType()">
                <option value="table" selected>Таблично</option>
                <option value="list">По-елементно</option>
            </select>
        </div>

        <div id="tableView" style="display: block;">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Staff ID</th>
                        <th>Email Address</th>
                        <th>Phone Number</th>
                        <th>Other Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var staff in Model)
                    {
                        <tr>
                            <td>@staff.StaffId</td>
                            <td>@staff.EmailAddress</td>
                            <td>@staff.PhoneNumber</td>
                            <td>@staff.OtherDetails</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div id="itemView" style="display: none;">
            <ul class="list-group">
                @foreach (var staff in Model)
                {
                    <li class="list-group-item">
                        <strong>ID:</strong> @staff.StaffId<br>
                        <strong>Email:</strong> @staff.EmailAddress<br>
                        <strong>Phone:</strong> @staff.PhoneNumber<br>
                        <strong>Details:</strong> @staff.OtherDetails
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<script>
    function changeViewType() {
        const viewType = document.getElementById("viewType").value;
        const tableView = document.getElementById("tableView");
        const listView = document.getElementById("itemView");

        if (viewType === "table") {
            tableView.style.display = "block";
            listView.style.display = "none";
        } else {
            tableView.style.display = "none";
            listView.style.display = "block";
        }
    }
</script>
